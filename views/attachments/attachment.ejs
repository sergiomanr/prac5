<% var attachment = post.attachment;
   %>
<% if (post.attachmentId) { %>

    <% if ( attachment.mime === "image/jpeg" || attachment.mime === "image/gif" ||
            attachment.mime === "image/jpg" || attachment.mime === "image/png" ||
            attachment.mime === "image/gif" ) { %>

        <img class="attachment" src="/posts/<%= post.id %>/attachment" alt="Image" width="300px"/>

        <% } else if ( attachment.mime === "application/pdf" ) { %>
            
            <img class="attachment" src="/images/pdf.png" alt="Image"/>
        
        <% } else { %>
            <img class="attachment" src="/images/doc.png" alt="Image"/>
        <% } %>

<% } else { %>
    <img class="attachment" src="/images/vacio.jpg" width="300px"/>
<% } %>